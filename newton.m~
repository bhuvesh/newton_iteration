function z = newton(roots,init)
eps = 1.0e-3;    
z1 = init+5;
z2 = init;
cnt = 1;
while (abs(z2-z1)>eps && cnt<100 )
    z1 = z2;
    z2 = z1 - newtonstep(roots,z1);
    cnt = cnt+1;
end
z = Inf;
m = Inf;
for iter=1:size(roots)+1
    if ( abs(roots(iter) - z2) < m)
        m = abs(roots(iter) - z2);
        z = z2;
    end
end

end


